{
	"$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
	"type": "AdaptiveCard",
	"version": "2.0",
	"body": [
		{
			"type": "TextBlock",
			"text": "The existential operator (#?) tells us not to include the binding if it doesn't exist",
			"wrap": true
		},
		{
			"type": "TextBlock",
			"text": "{{#? dataThatDoesntExist}}",
			"wrap": true
		},
		{
			"type": "TextBlock",
			"text": "{{dataThatDoesntExist}}",
			"wrap": true
		},
		{
			"type": "TextBlock",
			"text": "{{dataThatDoesntExist}} {{#? dataThatDoesntExist}}",
			"wrap": true
		}
	]
}
